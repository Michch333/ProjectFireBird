@{
    ViewData["Title"] = "Home Page";
}
@model CallYourShot.Models.ViewModels.HomePageViewModel


<div style="height: 80vh; width: 100%; display: flex; flex-direction: row; justify-content: space-between; border: 1px solid blue">
    <div id="player_left" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between; border: 1px solid red; flex: 1;" >
        @foreach(Player player in Model.ActivePlayers)
        {
            <div>
            <form asp-asp-controller="Home" asp-action="DiceRoll" a>
            <label asp-for="@player.Name"></label>
            <input asp-for="@player.Name" />
            <a name="roll">@player.Roll</a>
            <button onclick="href.location('/Home/DiceRoll')">Roll!</button>
            </form>
            </div>
            Model.CurrentRoller = player;
        }
    </div>
    <div id="game_field" style="flex: 3">
        @if (true)
        {
            <partial name="_RollInfo" />
        }

    </div>
    <div id="player_right" style="display: flex; flex-direction: column; justify-content: space-between; border: 1px solid orange; flex: 1;">
        <div id="player_three" style="background-color: lightseagreen">
            <h1>Greg Koniecki</h1>
            <p>Current Roll:</p><p>18</p>
            <p>Current Game Score:</p>
            <p>Dabcheck:</p>
            <input type="checkbox" />
            <p>Wins: 1</p>
        </div>
        <div id="player_four" style="background-color: black;">
            <h1>Not Available</h1>
            <p>Current Roll:</p><p>-</p>
            <p>Current Game Score:</p>
            <p>Dabcheck:</p>
            <input type="checkbox" />
            <p>Wins: 0</p>
        </div>
    </div>
        
</div>